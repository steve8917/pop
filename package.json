{
  "name": "tepustatuto",
  "version": "1.0.0",
  "description": "Sistema di gestione turni testimonianza pubblica",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --watch src --exec ts-node src/server.ts",
    "client": "cd client && npm run dev",
    "build": "tsc && cd client && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "migrate:users": "ts-node src/scripts/migrateExistingUsers.ts"
  },
  "keywords": [
    "turni",
    "testimonianza",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^7.0.13",
    "socket.io": "^4.6.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.30",
    "@types/nodemailer": "^6.4.14",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
